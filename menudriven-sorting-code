#include <stdio.h>
#include <stdlib.h>
int arr[50], n;

void selectionSort()
{
    int i, j, temp = 0;
    for (i = 0; i < n - 1; i++)
    {
        int minIndex = i;
        for (j = i + 1; j < n; j++)
        {
            if (arr[j] < arr[minIndex])
            {
                minIndex = j;
            }
        }

        temp = arr[minIndex];
        arr[minIndex] = arr[i];
        arr[i] = temp;
    }

    printf("\nAfter selection sort : \n");
    for (i = 0; i < n; i++)
    {
        printf("%d ", arr[i]);
    }
}

void bubbelSort()
{
    int i, j, temp = 0;
    for (i = 0; i < n - 1; i++)
    {
        for (j = i + 1; j < n; j++)
        {
            if (arr[i] > arr[j])
            {
                temp = arr[i];
                arr[i] = arr[j];
                arr[j] = temp;
            }
        }
    }
    printf("\nAfter bubbelSort sort : \n");
    for (i = 0; i < n; i++)
    {
        printf("%d ", arr[i]);
    }
}

void insertionSort()
{
    int i, j, temp = 0;
    for (i = 1; i < n; i++)
    {
        j = i - 1;
        temp = arr[i];
        while (j >= 0)
        {
            if (arr[j] > temp)
            {
                arr[j + 1] = arr[j];
            }
            else
            {
                break;
            }
            j--;
        }
        arr[j + 1] = temp;
    }

    printf("\nAfter insertion sort : \n");
    for (i = 0; i < n; i++)
    {
        printf("%d ", arr[i]);
    }
}

void main()
{
    int i, cn;
    // int arr[n];
    printf("Enter the size of the array : \n");
    scanf("%d", &n);
    printf("Enter %d element into the array : \n", n);
    for (i = 0; i < n; i++)
    {
        scanf("%d", &arr[i]);
    }

    printf("The %d elementls in the array are : \n", n);
    for (i = 0; i < n; i++)
    {
        printf("%d ", arr[i]);
    }

    // selectionSort(arr, n);

    while (1)
    {

        printf("\nYou have this options\n1. Selection sort\n2. bubbel sort\n3. Insertion sort\n4. Exit");
        printf("\nEnter your choice : ");
        scanf("%d", &cn);

        switch (cn)
        {
        case 1:
            selectionSort();
            break;
        case 2:
            bubbelSort();
            break;
        case 3:
            insertionSort();
            break;
        case 4:
            exit(0);
        default:
            printf("\nEnter a valid choice ! ");
        }
    }
    // return 0;
}
