#include<stdio.h>
int main()
{
    int n;
    printf("Enter a number : ");
    scanf("%d" , &n);
    if ( n < 0 )
    {
        printf("%d is a negative number ",n );
    }
    else if ( n > 0 )
    {
        printf("%d is a posetive number ",n );
    }
    else
    
    {
        printf("You entered a 0 !");
    }
    
    return 0;
}
