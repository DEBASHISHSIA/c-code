// simple Queue menudriven c program

#include <stdio.h>
#include <stdlib.h>
#define MAX 10

int queue_arr[MAX];
int rear = -1;
int front = -1;

void insert(int item);
int delet();
int peek();
void display();
int isFull();
int isEmpty();

int main()
{
    int choice, item;
    while (1)
    {
        printf("\nYou have this options : \n1. Insert\n2. Delet\n3. Display element at the front\n4. Display all element of queue\n5. Exit\nEnter your choice : ");
        scanf("%d", &choice);

        switch (choice)
        {
        case 1:
            printf("\nInsert element for adding in queue : ");
            scanf("%d", &item);
            insert(item);
            break;
        case 2:
            item = delet();
            printf("\nDeleted item is : %d", item);
            break;
        case 3:
            printf("\nElement at the front index is : %d", peek());
            break;
        case 4:
            display();
            break;
        case 5:
            exit(0);
        default:
            printf("\nEnter avalid choice\n");
        }
    }
    return 0;
}

void insert(int item)
{
    if (isFull())
    {
        printf("\nQueue is overflow");
        exit(1);
    }
    if (front == -1)
    {
        front = 0;
    }
    rear = rear + 1;
    queue_arr[rear] = item;
}

int delet()
{
    int item;
    if (isEmpty())
    {
        printf("\nQueue is underflow");
        exit(1);
    }
    item = queue_arr[front];
    front = front + 1;
    return item;
}

int peek()
{
    if (isEmpty())
    {
        printf("\nQueue Underflow\n");
        exit(1);
    }
    return queue_arr[front];
}

int isEmpty()
{
    if (front == -1 || front == rear + 1)
    {
        return 1;
    }
    else
    {
        return 0;
    }
}

int isFull()
{
    if (rear == MAX - 1)
    {
        return 1;
    }
    else
    {
        return 0;
    }
}

void display()
{
    int i;
    if (isEmpty())
    {
        printf("\nQueue is Empty");
    }
    printf("\nQueue elements are : ");
    for (i = front; i <= rear; i++)
    {
        printf("%d ", queue_arr[i]);
    }
}
